{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
    {
      "id": "txtTitle",
      "size": "large",
      "text": "${title}",
      "type": "TextBlock",
      "weight": "bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "wrap": true,
      "text": "${description}"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Consultar",
          "style": "positive",
          "data": "consultar"
        }
      ]
    }
  ]
}
